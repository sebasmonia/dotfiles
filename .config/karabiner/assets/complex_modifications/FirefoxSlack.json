{
    "rules": [
        {
        "conditions": [
            {
            "bundle_identifiers": [
                "^com\\.tinyspeck\\.slackmacgap$",
                "^org\\.mozilla\\.firefox$"
            ],
            "type": "frontmost_application_if"
        }
        ],
        "description": "Control + T => Command + T, for Firefox and Slack",
        "manipulators": [
            {
            "from": {
                "key_code": "t",
                "modifiers": {
                    "mandatory": [
                        "control"
                    ]
                }
            },
            "to": [
                {
                "key_code": "t",
                "modifiers": [
                    "command"
                ]
            }
            ],
            "type": "basic"
        }
        ]
    },
        {
        "conditions": [
            {
            "bundle_identifiers": [
                "^com\\.tinyspeck\\.slackmacgap",
                "^org\\.mozilla\\.firefox"
            ],
            "type": "frontmost_application_if"
        }
        ],
        "description": "Control + W => Command + W, for Firefox",
        "manipulators": [
            {
            "from": {
                "key_code": "w",
                "modifiers": {
                    "mandatory": [
                        "control"
                    ]
                }
            },
            "to": [
                {
                "key_code": "w",
                "modifiers": [
                    "command"
                ]
            }
            ],
            "type": "basic"
        }
        ]
    },
        {
        "conditions": [
            {
            "bundle_identifiers": [
                "^org\\.gnu\\.Emacs"
            ],
            "type": "frontmost_application_unless"
        },
            {
            "bundle_identifiers": [
                "^com\\.tinyspeck\\.slackmacgap",
                "^org\\.mozilla\\.firefox"            
            ],
            "type": "frontmost_application_if"
        }
        ],
        "description": "Control + F => Command + F, for Firefox and Slack, but not Emacs",
        "manipulators": [
            {
            "from": {
                "key_code": "f",
                "modifiers": {
                    "mandatory": [
                        "control"
                    ]
                }
            },
            "to": [
                {
                "key_code": "f",
                "modifiers": [
                    "command"
                ]
            }
            ],
            "type": "basic"
        }
        ]
    }
    ],
    "title": "Firefox and Slack only mappings"
}
