{
  "rules": [
    {
      "description": "Control + Shift + T => Command + Shift + T",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "control",
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": [
                "command",
                "shift"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Control +  H => Command + Shift + H",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.mozilla\\.firefox$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "h",
              "modifiers": [
                "command",
                "shift"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ],
  "title": "Firefox specific mappings"
}
