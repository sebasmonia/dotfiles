  "rules": [
    {
      "description": "Control + F => Command + F",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^org\\.whispersystems\\.signal-desktop$",
                "^com\\.tinyspeck\\.slackmacgap$",
                "^org\\.mozilla\\.firefox$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "f",
              "modifiers": [
                "command"
              ]
            }
          ],
          "type": "basic"
        }
      ]
