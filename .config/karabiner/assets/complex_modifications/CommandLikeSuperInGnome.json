{
  "rules": [
    {
      "description": "Command is Command+space if tapped, Command if held down",
      "manipulators": [
        {
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to_delayed_action": {
            "to_if_canceled": [
              {
                "key_code": "left_command"
              }
            ]
          },
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "command"
              ],
              "halt": true
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "left_command"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ],
  "title": "Command like Super key in Gnome"
}

  
